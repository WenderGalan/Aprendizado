<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="radionbutton.wendergalan.com.radionbutton.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="100px"
        android:text="@string/comida_preferida"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/radionGroupID"
        android:layout_width="200dp"
        android:layout_height="130dp">

        <RadioButton
            android:id="@+id/lasanhaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lasanha" />

        <RadioButton
            android:id="@+id/pargmedianaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parmegiana" />

        <RadioButton
            android:id="@+id/macarraoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MacarrÃ£o" />

    </RadioGroup>

    <Button
        android:id="@+id/botaoEscolher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESCOLHER" />

    <TextView
        android:id="@+id/textExibicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="250px"
        android:text="TextView"
        android:textSize="30dp" />
</LinearLayout>
