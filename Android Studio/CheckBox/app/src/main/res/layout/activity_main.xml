<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="checkbox.wendergalan.com.checkbox.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="37dp"
        android:text="Quais animais de estimação você tem?" />

    <CheckBox
        android:id="@+id/checkBoxCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:text="Cão" />

    <CheckBox
        android:id="@+id/checkBoxGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxCao"
        android:layout_alignStart="@+id/checkBoxCao"
        android:layout_below="@+id/checkBoxCao"
        android:layout_marginTop="15dp"
        android:text="Gato" />

    <CheckBox
        android:id="@+id/checkBoxPapagaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkBoxGato"
        android:layout_alignStart="@+id/checkBoxGato"
        android:layout_below="@+id/checkBoxGato"
        android:layout_marginTop="16dp"
        android:text="Papagaio" />

    <Button
        android:id="@+id/botaoMostrarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Mostrar" />

    <TextView
        android:id="@+id/textMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkBoxPapagaio"
        android:layout_alignRight="@+id/checkBoxPapagaio"
        android:layout_below="@+id/botaoMostrarID"
        android:layout_marginTop="40dp"
        android:text="Mostrar..." />
</RelativeLayout>
